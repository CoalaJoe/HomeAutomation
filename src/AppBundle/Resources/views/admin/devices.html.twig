{% extends app.request.xmlHttpRequest
? 'AppBundle::ajax-base.html.twig'
: 'AppBundle::base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="well bootable boot-start">
            <h1>Geräte</h1>
            <div style="overflow-x: auto">
                <table class="table table-striped">
                    <tr>
                        <th class="hidden-sm hidden-xs">ID</th>
                        <th>Gerät</th>
                        <th>Raum</th>
                        <th class="hidden-sm hidden-xs">IP</th>
                        <th class="hidden-sm hidden-xs">MAC</th>
                        <th>Authorisiert</th>
                    </tr>
                    {% for device in devices %}
                        <tr>
                            <td class="hidden-sm hidden-xs">{{ device.id }}</td>
                            <td>{{ device.deviceName }}</td>
                            <td>{{ device.room.name }}</td>
                            <td class="hidden-sm hidden-xs">{{ device.ip }}</td>
                            <td class="hidden-sm hidden-xs">{{ device.mac }}</td>
                            <td>{{ device.authorized ? 'ja':'nein' }}</td>
                        </tr>
                    {% endfor %}
                </table>
            </div>
        </div>
    </div>
{% endblock %}
