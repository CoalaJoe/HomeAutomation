{% spaceless %}

  {# TODO: Add Images #}
  {% set application_color = '#009688' %}
  {% set application_name  = 'HomeAutomation' %}

  {# Here are some tags you might want to consider when making a website more app-like on mobile devices.#}
  <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
  {# General images for favicon #}
  <link rel="icon" type="image/png" href="#" sizes="16x16"/>
  <link rel="icon" type="image/png" href="#" sizes="32x32"/>
  <link rel="icon" type="image/png" href="#" sizes="96x96"/>
  <link rel="icon" type="image/png" href="#" sizes="192x192"/>
  <link rel="icon" type="image/png" href="#" sizes="196x196"/>
  <link rel="icon" type="image/png" href="#" sizes="228x228"/>



  {# Android configs #}
  <meta name="theme-color" content="{{ application_color }}"/>
  <meta name="mobile-web-app-capable" content="yes"/>

  {# iOS configs #}
  <meta name="apple-mobile-web-app-status-bar-style" content="{{ application_color }}"/>
  <meta name="apple-mobile-web-app-title" content="{{ application_name }}"/>
  <meta name="apple-mobile-web-app-capable" content="yes"/>
  <meta name='apple-touch-fullscreen' content='yes'/>
  <link rel="apple-touch-icon" sizes="60x60" href="#"/>
  <link rel="apple-touch-icon" sizes="76x76" href="#"/>
  <link rel="apple-touch-icon" sizes="120x120" href="#"/>
  <link rel="apple-touch-icon" sizes="152x152" href="#"/>
  <link rel="apple-touch-icon" sizes="180x180" href="#"/>
  <link href="#" rel="apple-touch-startup-image"/>

  {# Safari configs #}
  <link rel="mask-icon" href="#" color="{{ application_color }}"/>

  {# Windows tiles #}
  <meta name="application-name" content="{{ application_name }}"/>
  <meta name="msapplication-navbutton-color" content="{{ application_color }}"/>
  <meta name="msapplication-TileColor" content="{{ application_color }}"/>
  <meta name="msapplication-TileImage" content="#"/>
  <meta name="msapplication-config" content="#"/>
{% endspaceless %}
